{
  "expo": {
    "name": "Spendiary",
    "slug": "spendiary",
    "version": "1.2.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#F1FADA"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Esta app necesita acceso a tus fotos para guardar los reportes.",
        "NSPhotoLibraryAddUsageDescription": "Esta app necesita guardar archivos en tu galer√≠a."
      }
    },
    "android": {
      "newArchEnabled": true,
      "softwareKeyboardLayoutMode": "adjustResize",
      "navigationBar": {
        "visible": "sticky-immersive"
      },
      "permissions": [
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "VIBRATE"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F1FADA"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.armandoaranopla.spendiary"
    },
    "plugins": [
      "expo-localization",
      "expo-font",
      [
        "expo-build-properties",
        {
          "android": {
            "blockedPermissions": [
              "android.permission.READ_EXTERNAL_STORAGE",
              "android.permission.WRITE_EXTERNAL_STORAGE",
              "android.permission.ACCESS_NETWORK_STATE",
              "android.permission.WAKE_LOCK",
              "android.permission.SYSTEM_ALERT_WINDOW",
              "com.google.android.gms.permission.AD_ID"
            ]
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "247a7e7b-c2d6-4b8f-baa1-5c60a4a7c14f"
      }
    }
  }
}